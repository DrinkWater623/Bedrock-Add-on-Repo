{
	"$schema": "https://raw.githubusercontent.com/Bedrock-OSS/regolith-schemas/main/config/v1.1.json",
	"author": "DrinkWater623/PinkSalt623 aka Nikki DW",
	"name": "Vein_Miner",
	"packs": {
		"behaviorPack": "./packs/BP",
		"resourcePack": "./packs/RP"
	},
	"regolith": {
		"dataPath": "./packs/data",
		"filterDefinitions": {
			"jsonte": {
				"url": "github.com/MCDevKit/regolith-library",
				"version": "2.12.0"
			},
			"dot_ignore": {
				"runWith": "python",
				"script": "./filters/dot_ignore.py"
			},
			"mani_fest": {
				"runWith": "nodejs",
				"script": "./filters/mani_fest.js"
			}
		},
		"profiles": {
			"default": {
				"export": {
					"readOnly": false,
					"target": "development"
				},
				"filters": [
					{"filter":"dot_ignore"},
					{"filter":"jsonte"},					
					{
						"filter": "mani_fest",
						"settings": {
							"BP": {
								"UUID": "fdcd21b1-1c89-477b-be03-0528d783229d",
								"module": "db07875a-046b-4a24-b3ca-f607badb1643"
							},
							"RP": {
								"UUID": "d2c22515-f69f-4795-bdb5-3e0f2d5f7191",
								"module": "11ee4067-4a9e-4997-8046-7768017b0f84"
							},
							"description": "Work in Progress",
							"min_engine_version": [1,20,30],
							"name": "Dev: Vein Miner"
						}
					}
				]
			},
			"build": {
				"export": {
					"readOnly": false,
					"target": "local"
				},
				"filters": [
					{"filter":"dot_ignore"},
					{"filter":"jsonte"},					
					{
						"filter": "mani_fest",
						"settings": {
							"description": "Trees and more by DrinkWater623",
							"getUUIDs": true,
							"min_engine_version": [1,20,30],
							"name": "Vein Miner"
						}
					}
				]
			}
		}
	}
}