{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "dw623:death_bot",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false      
    },
    "component_groups": {
      "cg:despawn":{"minecraft:instant_despawn":{}},
      "cg:despawn_when_empty":{
        "minecraft:despawn":{"filters":{"test":"all_slots_empty","subject":"self","operator":"equals","value":"inventory"}}
        //,"minecraft:timer": {"looping":true,"time":5,"time_down_event":{"event":"ev:protection"}}
      }
    },
    "components": {
      "minecraft:breathable": {
        "breathes_air":true,
        "breathes_lava":true,
        "breathes_solids":true,
        "breathes_water":true,
        "generates_bubbles":false
      },
      "minecraft:collision_box": {"height": 1.25,"width":1.25},
      "minecraft:damage_sensor":{"triggers":{"cause":"all","deals_damage":"no"}},
      //------------------------------------      
      "minecraft:fire_immune":{},
      "minecraft:inventory": {
        "can_be_siphoned_from": true,
        "container_type": "inventory",
        "inventory_size": 27,
        "private": false,
        "restrict_to_owner": false
      },
      "minecraft:is_stackable": {},
      "minecraft:item_hopper":{},
      //------------------------------------
      "minecraft:nameable": {
        "allow_name_tag_renaming": true,
        "always_show": true
      },
      "minecraft:physics": {"has_collision":true,"has_gravity":false},
      "minecraft:push_through": {"value":0},
      "minecraft:pushable":{"is_pushable":false},
      "minecraft:scale": {"value":0.75},
      "minecraft:tick_world": {},  
      //100 ticks before it knows to disappear from beginning.     
      "minecraft:timer": {"looping":false,"time":30,"time_down_event":{"event":"ev:despawn_when_empty"}}, 
      //"minecraft:timer": {"looping":false,"time":15,"time_down_event":{"event":"ev:despawn_when_empty"}}, 
      "minecraft:type_family": {"family":["dw623","bot","dw623_death_bot"]},
      "minecraft:behavior.rise_to_liquid_level": {
          "priority": 0,
          "liquid_y_offset": 0.25,
          "rise_delta": 0.01,
          "sink_delta": 0.01
        },
      "minecraft:environment_sensor": {
        "triggers":[{"event":"ev:in_lava","target":"self","filters":{"test":"in_lava","subject":"self","operator":"==","value":true}}]}
    },
    "events": {
      "ev:despawn_when_empty": {"add":{"component_groups":["cg:despawn_when_empty"]}},
      "ev:in_lava": {
        "queue_command": {"command":["scriptevent dw623:death_bot_debug Death-Bot Senses Lava"]},
        "trigger": "ev:lava_protect"
      },
      "minecraft:entity_spawned":{
        "sequence": [
          {
            "filters": {"test": "in_lava"},
            "queue_command": {"command":["scriptevent dw623:death_bot_debug Death-Bot Spawned in Lava"]},
            "trigger": "ev:lava_protect"
          }, 
          {"trigger":"ev:grab_stuff"}
        ]
      },
      "ev:grab_stuff":{
        "sequence": [         
          {
            "queue_command": {"command": [
            "scriptevent dw623:death_bot_debug 1) tp @e[r=5,type=item] @s",            
            "tp @e[r=5,type=item] @s"
            ]}
          }
        ]
      },
      "ev:lava_protect": {
        "queue_command": {
          "command": [
            "fill ~-5 ~-5 ~-5 ~5 ~5 ~5 water replace lava",
            "fill ~-5 ~-5 ~-5 ~5 ~5 ~5 water replace flowing_lava",
            "effect @s fire_resistance 99999999 255 true"           
          ]
        }
      }
    } 
  }
}
