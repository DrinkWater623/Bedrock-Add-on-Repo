{
	"$schema": "https://raw.githubusercontent.com/Bedrock-OSS/regolith-schemas/main/config/v1.2.json",
	"author": "DrinkWater623/PinkSalt623 aka Nikki DW",
	"name": "DW_Template",
	"packs": {
		"behaviorPack": "./packs/BP",
		"resourcePack": "./packs/RP"
	},
	"regolith": {
		"dataPath": "./packs/data",
		"filterDefinitions": {			
			"dot_ignore": {
				"runWith": "python",
				"script": "./filters/dot_ignore.py"
			},
			"empty_ignore": {
				"runWith": "python",
				"script": "./filters/empty_ignore.py"
			},
			"mani_fest": {
				"runWith": "nodejs",
				"script": "./filters/mani_fest.js"
			},
			"ts-compile": {
				"runWith": "nodejs",
				"script": "./filters/ts-compile.js"
			}
		},
		"profiles": {
			"test_ts2js": {
				"export": {"readOnly":false,"target":"local","rpName": "'RP'","bpName": "'BP'"},				
				"filters": [
					{
						"filter":"ts-compile",
						"settings": {
							"src": "all",
							"ignoreFileRegEx":[],
							"copyJsFiles": true,			
							"dest": "default"
						}
					}
				]
			},
			"build": {
				"export": {"readOnly":false,"target":"local","rpName": "'RP'","bpName": "'BP'"},				
				"filters": [							
					{
						"filter": "mani_fest",
						"settings": {
							"author": "DrinkWater623/PinkSalt623 aka Nikki DW",
							//"rp_only":true,
							//"bp_only":true,
							"scripting":true,
							"name": "My Template Add-On",
							"description": "It is done and It Does Nothing!!!",
							"getUUIDs": true,
							"min_engine_version": "get-1",
							"version": [2,0,1],
							"BP": {
								"scripting_version": "get"
							}
						}
					}
				]
			},
			"default": {
				"export": {"readOnly":false,"target":"development"},
				"filters": [
					{"filter":"dot_ignore"},
					{"filter":"empty_ignore"},				
					{
						"filter": "mani_fest",
						"settings": {
							"BP": {
								"UUID": "3b9dd728-b56c-4a6c-9e6e-44078f3128e9",
								"module": "24198277-54c1-4e78-83ce-77329927a9ff"
							},
							"RP": {
								"UUID": "490810eb-739f-4047-8c02-2b4f008c8bbb",
								"module": "ba0df930-4607-4d4d-a2d7-94f90704d5fd"
							},
							"name": "Dev: ?",
							"description": "Work in Progress",
							"min_engine_version": "get"
						}
					}
				]
			}
		}
	}
}